server {

    error_log /data/logs/nginx_error.log debug;
    rewrite_log on;

    client_max_body_size 1024M;

    listen 80;

    location /api {
        proxy_pass http://127.0.0.1:8001;
    }

    location / {
        alias /app/client/app/;
    }

    location /bower_components/ {
      alias /app/client/app/bower_components/;
      try_files $uri $uri/;
    }
    
    ####################################################################################

}
